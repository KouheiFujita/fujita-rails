<h1>People#index</h1>
<p><%= @msg %></p>
<pre>
<table>
	<tr>
		<th>Id</th><th>Name</th><th colspan="2"></th>
	</tr>
	<% @data.each do |obj| %> <!-- eachはobjに１行づつ代入 -->
	<tr>
		<td><%= obj.id %></td> <!-- .idはメソッドではなく、プロパティ(objに属するid) -->
		<td><a href="/people/<%= obj.id %>"><%= obj.name %></a></td>
		<td><a href="/people/edit/<%= obj.id %>">Edit</a></td>
		<td><a href="javascript:delData(<%= obj.id %>);">Delete</a></td>
	</tr>
	<% end %>
</table>
<script>
function delData(num){
	if (confirm('このデータを削除しますか？')){
		document.location = "/people/delete/" + num; // document.locationは現在のドキュメントのURL
	}
	return false; // clickイベントを実行した後にリンク先に移動してしまうそれを防ぐ
}
</script>
</pre>
